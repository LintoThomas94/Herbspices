<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customers Page</title>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f1f3f6;
    }
   /* Main content wrapper */
    .main-content { padding: 8px; margin-left: 220px; }

    /* Header */
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; }
    .page-title { font-size: 26px; font-weight: bold; color: #2c3e50; }

    /* Search */
    .search-container {
      display: flex; align-items: center; background: white;
      border-radius: 30px; padding: 5px 15px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    .search-input { border: none; outline: none; padding: 8px 12px; font-size: 14px; flex: 1; }
    .search-btn { border: none; background: #3498db; border-radius: 50%; padding: 8px; cursor: pointer; display: flex; justify-content: center; align-items: center; }
    .search-btn:hover { background: #2980b9; }
    .search-btn svg { fill: #ffffff; }

    /* Card */
    .card {
      border-radius: 15px;
      overflow: hidden;
    }

    /* Table header */
    .table-header {
      background: linear-gradient(90deg, #0d6efd, #0dcaf0);
      color: white;
      text-transform: uppercase;
      font-size: 0.9rem;
      letter-spacing: 0.5px;
    }

    /* Table row hover */
    .table-hover tbody tr:hover {
      background-color: #f8f9fa;
      box-shadow: inset 4px 0 0 #0d6efd;
      transition: all 0.2s ease-in-out;
    }

    /* Buttons */
    .btn-sm {
      border-radius: 25px;
      padding: 5px 12px;
      font-size: 0.85rem;
      font-weight: 600;
    }

    /* Pagination */
    .custom-pagination .page-link {
      border-radius: 50px !important;
      margin: 0 6px;
      padding: 10px 18px;
      border: none;
      color: #0d6efd;
      font-weight: 600;
      background: #fff;
      box-shadow: 0 3px 6px rgba(0,0,0,0.08);
      transition: all 0.3s ease-in-out;
    }
    .custom-pagination .page-link:hover {
      background: linear-gradient(135deg, #0d6efd, #0dcaf0);
      color: #fff;
      transform: translateY(-3px);
    }
    .custom-pagination .active .page-link {
      background: linear-gradient(135deg, #0d6efd, #0dcaf0);
      color: #fff;
      font-weight: bold;
      box-shadow: 0 4px 12px rgba(0, 123, 255, 0.4);
    }
    
    /* No results message */
    .no-results {
      text-align: center;
      padding: 20px;
      color: #6c757d;
      font-style: italic;
    }
  </style>
</head>
<body>
<%- include("../partials/admin/header") %>
    <!-- Main Content -->
       <main class="main-content">
    <!-- Header -->
    <header class="header">
      <h1 class="page-title">Customers</h1>
      <!-- Search Form -->
      <div class="search-container">
        <input type="text" id="searchInput" class="search-input" placeholder="Search by name, email or phone..." 
               value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
        <button type="button" class="search-btn" onclick="performSearch()">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 
                     16 11.11 16 9.5 16 5.91 13.09 3 
                     9.5 3S3 5.91 3 9.5 5.91 16 
                     9.5 16c1.61 0 3.09-.59 4.23-1.57
                     l.27.28v.79l5 4.99L20.49 
                     19l-4.99-5zm-6 0C7.01 14 5 
                     11.99 5 9.5S7.01 5 9.5 5 
                     14 7.01 14 9.5 11.99 14 
                     9.5 14z"/>
          </svg>
        </button>
      </div>
    </header>
  
    <br><br>

    <!-- Customers Table -->
    <div class="card shadow border-0">
      <div class="card-body p-4">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-header text-center">
            <tr>
              <th>üë§ Name</th>
              <th>üìß Email</th>
              <th>üì± Phone</th>
              <th>‚öôÔ∏è Action</th>
            </tr>
          </thead>
          <tbody id="customersTableBody">
            <% if (data && data.length > 0) { %>
              <% for (let i = 0; i < data.length; i++) { %>
                <tr class="text-center customer-row" 
                    data-name="<%= (data[i].firstname + ' ' + data[i].lastname).toLowerCase() %>"
                    data-email="<%= data[i].email.toLowerCase() %>"
                    data-phone="<%= data[i].phone ? data[i].phone.toLowerCase() : '' %>">
                  <td><%= data[i].firstname %> <%= data[i].lastname %></td>
                  <td><%= data[i].email %></td>
                  <td><%= data[i].phone %></td>
                  <td>
                    <% if (data[i].isBlocked) { %>
                      <a href="/admin/unblockcustomer?id=<%= data[i]._id %>" 
                         class="btn btn-success btn-sm unblock-btn"
                         data-customer-name="<%= data[i].firstname %> <%= data[i].lastname %>">
                        <i class="bi bi-unlock"></i> Unblock
                      </a>
                    <% } else { %>
                      <a href="/admin/blockcustomer?id=<%= data[i]._id %>" 
                         class="btn btn-danger btn-sm block-btn"
                         data-customer-name="<%= data[i].firstname %> <%= data[i].lastname %>">
                        <i class="bi bi-lock"></i> Block
                      </a>
                    <% } %>
                  </td>
                </tr>
              <% } %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center text-muted py-4"> No customers found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <div id="noResults" class="no-results" style="display: none;">
          No customers found matching your search.
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <div class="mt-4" id="paginationContainer">
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center custom-pagination">
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %><% if (typeof searchQuery !== 'undefined' && searchQuery) { %>&search=<%= searchQuery %><% } %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>
  </div>

  <!-- Custom Confirmation Modal -->
  <div class="modal fade" id="confirmationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle">Confirm Action</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="modalBody">
          Are you sure you want to perform this action?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a id="confirmAction" href="#" class="btn btn-primary">Confirm</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    // Store original customer data for search functionality
    const originalCustomers = [];
    document.querySelectorAll('.customer-row').forEach(row => {
      originalCustomers.push({
        element: row,
        name: row.getAttribute('data-name'),
        email: row.getAttribute('data-email'),
        phone: row.getAttribute('data-phone')
      });
    });
    
    // Search functionality
    window.performSearch = function() {
      const searchTerm = document.getElementById('searchInput').value.trim().toLowerCase();
      const noResults = document.getElementById('noResults');
      const paginationContainer = document.getElementById('paginationContainer');
      
      if (searchTerm) {
        // Hide pagination when searching
        paginationContainer.style.display = 'none';
        
        let foundResults = false;
        
        // Filter customers
        originalCustomers.forEach(customer => {
          const matches = customer.name.includes(searchTerm) || 
                          customer.email.includes(searchTerm) || 
                          (customer.phone && customer.phone.includes(searchTerm));
          
          if (matches) {
            customer.element.style.display = '';
            foundResults = true;
          } else {
            customer.element.style.display = 'none';
          }
        });
        
        // Show no results message if needed
        if (!foundResults) {
          noResults.style.display = 'block';
        } else {
          noResults.style.display = 'none';
        }
      } else {
        // Show all customers and pagination when search is empty
        originalCustomers.forEach(customer => {
          customer.element.style.display = '';
        });
        noResults.style.display = 'none';
        paginationContainer.style.display = 'block';
      }
    };
    
    // Allow pressing Enter to search
    document.getElementById('searchInput').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        performSearch();
      }
    });
    
    // Clear search when input is cleared
    document.getElementById('searchInput').addEventListener('input', function(e) {
      if (e.target.value === '') {
        performSearch();
      }
    });
    
    // Block/Unblock confirmation functionality
    const blockButtons = document.querySelectorAll('.block-btn');
    const unblockButtons = document.querySelectorAll('.unblock-btn');
    const confirmationModal = new bootstrap.Modal(document.getElementById('confirmationModal'));
    const modalTitle = document.getElementById('modalTitle');
    const modalBody = document.getElementById('modalBody');
    const confirmAction = document.getElementById('confirmAction');
    
    function setupButtonListeners(buttons, action) {
      buttons.forEach(button => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          const customerName = this.getAttribute('data-customer-name');
          const actionUrl = this.getAttribute('href');
          
          modalTitle.textContent = `Confirm ${action}`;
          modalBody.innerHTML = `Are you sure you want to ${action.toLowerCase()} <strong>${customerName}</strong>?`;
          confirmAction.href = actionUrl;
          
          confirmationModal.show();
        });
      });
    }
    
    if (blockButtons.length > 0) {
      setupButtonListeners(blockButtons, 'Block');
    }
    
    if (unblockButtons.length > 0) {
      setupButtonListeners(unblockButtons, 'Unblock');
    }
  });
</script>
</body>
</html>