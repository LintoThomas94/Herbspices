<%- include("../partials/admin/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Customers</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Chart.js CDN -->

  <style>
    /* Reset */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f4f6f9;
      color: #333;
    }

    /* Main content wrapper */
    .main-content { padding: 8px; margin-left: 220px; }

    /* Header */
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; }
    .page-title { font-size: 26px; font-weight: bold; color: #2c3e50; }

    /* Search */
    .search-container {
      display: flex; align-items: center; background: white;
      border-radius: 30px; padding: 5px 15px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    .search-input { border: none; outline: none; padding: 8px 12px; font-size: 14px; flex: 1; }
    .search-btn { border: none; background: #3498db; border-radius: 50%; padding: 8px; cursor: pointer; display: flex; justify-content: center; align-items: center; }
    .search-btn:hover { background: #2980b9; }
    .search-btn svg { fill: #ffffff; }

    /* Stats cards */
    .stats-grid {
      display: grid; grid-template-columns: repeat(4, 1fr);
      gap: 20px; margin: 25px 0;
    }
    .stat-card {
      background: white; padding: 20px;
      border-radius: 15px; box-shadow: 0 4px 10px rgba(0,0,0,0.08);
      display: flex; align-items: center; transition: transform 0.2s;
    }
    .stat-card:hover { transform: translateY(-5px); }
    .stat-icon {
      width: 50px; height: 50px; border-radius: 12px;
      display: flex; align-items: center; justify-content: center;
      margin-right: 15px; color: white; font-size: 22px;
    }
    .stat-icon.users { background: #3498db; }
    .stat-icon.orders { background: #2ecc71; }
    .stat-icon.sales { background: #f39c12; }
    .stat-icon.pending { background: #e74c3c; }

    .stat-info h3 { margin: 0; font-size: 22px; font-weight: bold; }
    .stat-info p { margin: 0; color: #666; font-size: 14px; }

    /* Chart Section */
    .chart-section {
      background: white; padding: 25px;
      border-radius: 15px; box-shadow: 0 4px 10px rgba(0,0,0,0.08);
      margin-top: 20px;
    }
    .chart-header {
      display: flex; justify-content: space-between;
      align-items: center; margin-bottom: 15px;
    }
    .chart-title { font-size: 20px; font-weight: bold; color: #2c3e50; }
    .chart-filter { padding: 6px 12px; border-radius: 8px; border: 1px solid #ddd; }
    .chart-container { height: 350px; }
  </style>
</head>
<body>
  <main class="main-content">
    <!-- Header -->
    <header class="header">
      <h1 class="page-title">Dashboard</h1>
      <div class="search-container">
        <input type="text" class="search-input" placeholder="Search ...">
        <button class="search-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 
                     16 11.11 16 9.5 16 5.91 13.09 3 
                     9.5 3S3 5.91 3 9.5 5.91 16 
                     9.5 16c1.61 0 3.09-.59 4.23-1.57
                     l.27.28v.79l5 4.99L20.49 
                     19l-4.99-5zm-6 0C7.01 14 5 
                     11.99 5 9.5S7.01 5 9.5 5 
                     14 7.01 14 9.5 11.99 14 
                     9.5 14z"/>
          </svg>
        </button>
      </div>
    </header>

    <!-- Stats Cards -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon users">üë§</div>
        <div class="stat-info"><h3>10,583</h3><p>Total Users</p></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon orders">üì¶</div>
        <div class="stat-info"><h3>8,538</h3><p>Total Orders</p></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon sales">üí∞</div>
        <div class="stat-info"><h3>‚Çπ65,805</h3><p>Total Sales</p></div>
      </div>
      <div class="stat-card">
        <div class="stat-icon pending">‚è≥</div>
        <div class="stat-info"><h3>3,552</h3><p>Total Pending</p></div>
      </div>
    </div>

    <!-- Chart -->
    <div class="chart-section">
      <div class="chart-header">
        <h2 class="chart-title">Sales Details</h2>
        <select class="chart-filter" id="chartFilter">
          <option value="monthly">Monthly</option>
          <option value="weekly">Weekly</option>
          <option value="daily">Daily</option>
        </select>
      </div>
      <div class="chart-container">
        <canvas id="salesChart"></canvas>
      </div>
    </div>
  </main>

  <!-- Chart.js Script -->
  <script>
    const ctx = document.getElementById('salesChart').getContext('2d');
    let salesChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
        datasets: [{
          label: 'Sales (‚Çπ)',
          data: [12000, 19000, 15000, 22000, 30000, 25000, 32000],
          backgroundColor: 'rgba(52, 152, 219, 0.2)',
          borderColor: '#3498db',
          borderWidth: 2,
          fill: true,
          tension: 0.3
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: true, position: 'top' } },
        scales: {
          y: { beginAtZero: true }
        }
      }
    });

    // Example filter functionality
    document.getElementById("chartFilter").addEventListener("change", function() {
      if (this.value === "weekly") {
        salesChart.data.labels = ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"];
        salesChart.data.datasets[0].data = [2000, 3000, 1500, 4000, 2500, 3500, 5000];
      } else if (this.value === "daily") {
        salesChart.data.labels = ["9AM", "12PM", "3PM", "6PM", "9PM"];
        salesChart.data.datasets[0].data = [500, 1200, 900, 1500, 2000];
      } else {
        salesChart.data.labels = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul"];
        salesChart.data.datasets[0].data = [12000, 19000, 15000, 22000, 30000, 25000, 32000];
      }
      salesChart.update();
    });
  </script>
</body>
</html>
